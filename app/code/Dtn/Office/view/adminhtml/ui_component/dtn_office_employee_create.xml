<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">dtn_office_employee_create.dtn_office_employee_create_data_source
            </item>
            <item name="deps" xsi:type="string">dtn_office_employee_create.dtn_office_employee_create_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Employee Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">dtn_office_employee_create</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Dtn\Office\Block\Adminhtml\Employee\SaveButton"/>
        </buttons>
        <dataScope>data</dataScope>
        <deps>
            <dep>dtn_office_employee_create.dtn_office_employee_create_data_source</dep>
        </deps>
    </settings>
    <dataSource name="dtn_office_employee_create_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="dtn/employee/createPost"/>
        </settings>
        <dataProvider class="Dtn\Office\Model\Employee\DataProvider"
                      name="dtn_office_employee_create_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>employee_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="employee_details">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Employee Details</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <field name="full_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Full Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">full_name</item>
                </item>
            </argument>
        </field>
        <field name="address">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Address</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">address</item>
                </item>
            </argument>
        </field>
        <field name="telephone">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Telephone</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">telephone</item>
                </item>
            </argument>
        </field>
        <field name="department_id" sortOrder="50" formElement="select">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Department</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Dtn\Office\Model\Source\Department\Options"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="dob">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="label" xsi:type="string" translate="true">Date of Birth</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="source" xsi:type="string">employee</item>
                    <item name="dataScope" xsi:type="string">dob</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
